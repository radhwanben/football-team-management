{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
            <div class="row">
               <div class="col-md-11"> Team Details</div>
                <div class="col-md-1"><a class="btn btn-warning" href={{path('team_list')}}>Teams</a></div>
            </div>
            </div>
            <div class="card-body">
                <h3>{{ team.name }}</h3>
                <p>Country: {{ team.country }}</p>
                <p>Balance: {{ team.balance|number_format(0, '.', ',') }} $</p>
                <p>Number of Players: {{ team.players.count() }}</p>
                <h4>Players:</h4>
                <ul class="list-group">
                    {% for player in team.players %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ player.name }} - {{ player.surname }}
                                <div>
                                <a class="btn btn-danger" href="{{path('app_transfer',{'id':player.id})}}">Sell/Buy</a>
                                <a class="btn btn-primary" href="{{path('player_details', {'id':player.id })}}">player details</a>
                                </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
