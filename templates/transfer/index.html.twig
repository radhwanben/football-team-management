{% extends 'base.html.twig' %}

{% block title %}Transfer Player{% endblock %}

{% block body %}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-11">Player Information</div>
                <div class="col-md-1">
                    <a class="btn btn-warning" href="{{ path('team_list') }}">Teams</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text">Name: {{ player.player.name }}</p>
            <p class="card-text">Surname: {{ player.player.surname }}</p>
            <p class="card-text">Price: {{ player.amount|number_format(0, '.', ',') }} $</p>


            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.amount, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.sellingTeam, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.buyingTeam, {'attr': {'class': 'form-control'}}) }}
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Buy</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
